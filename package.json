{
  "type": "module",
  "name": "secret-protection-custom-pattern-automation",
  "version": "1.0.0",
  "description": "A Playwright-based tool to automate GitHub secret scanning custom pattern management.",
  "main": "dist/secret_protection.js",
  "bin": {
    "secret-scanner": "dist/cli.js"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/advanced-security/secret-protection-custom-pattern-automation"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build --silent && node dist/cli.js",
    "dev": "tsc --watch",
    "validate": "npm run build --silent && node dist/cli.js --validate-only",
    "download": "npm run build --silent && node dist/cli.js --download-existing",
    "help": "npm run build --silent && node dist/cli.js --help",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npm run lint && npm run build && node dist/validator.test.js && node dist/secret_protection.test.js",
    "test:validator": "npm run build --silent && node dist/validator.test.js",
    "test:secret_protection": "npm run build --silent && node dist/secret_protection.test.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/cli-progress": "^3.11.6",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-github": "^5.0.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "inquirer": "^12.0.0",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8",
    "playwright": "^1.53.0"
  },
  "keywords": [
    "github",
    "secret-scanning",
    "security",
    "automation",
    "playwright",
    "devsecops",
    "appsec"
  ],
  "author": "GitHub Advanced Security Team",
  "license": "MIT"
}